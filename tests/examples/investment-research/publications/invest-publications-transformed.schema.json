                "type": "array",
                "items": {
                  "enum": [
                    "Equities",
                    "Bonds",
                    "Commodities",
                    "REITs",
                    "FX",
                    "Derivatives",
                    "Alternatives",
                    "Cash"
                  ],
                  "type": "string"
                },
                "uniqueItems": true
              }
            },
            "description": "Domain metadata for investment analytics (extensible)"
          },
          "forecastToday": {
            "type": "object",
            "description": "Transformed forecast data (created if forecastTodayValue exists in input)",
            "properties": {
              "value": {
                "type": "number",
                "description": "Forecast value converted from string to number"
              },
              "direction": {
                "type": "string",
